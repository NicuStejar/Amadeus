<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ViewsAndControllers.CitireActivity"
    tools:showIn="@layout/activity_citire">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scaneaza ID Contor"
        android:id="@+id/scaneazaIDbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/idContorTextView"
        android:layout_alignBottom="@+id/scaneazaIDbutton"
        android:layout_alignRight="@+id/indexContorTextView"
        android:layout_alignEnd="@+id/indexContorTextView"
        android:layout_alignLeft="@+id/indexContorTextView"
        android:layout_alignStart="@+id/indexContorTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scaneaza Index"
        android:id="@+id/scaneazaIndexButton"
        android:layout_below="@+id/scaneazaIDbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scaneazaIDbutton"
        android:layout_alignEnd="@+id/scaneazaIDbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/indexContorTextView"
        android:layout_alignBottom="@+id/scaneazaIndexButton"
        android:layout_toRightOf="@+id/scaneazaIndexButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trimite"
        android:id="@+id/trimiteButton"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/scaneazaIndexButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scaneazaIndexButton"
        android:layout_alignEnd="@+id/scaneazaIndexButton"
        android:onClick="onClickTrimite" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIndex"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
